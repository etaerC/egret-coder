{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "target": "ES6",
        "allowJs": true,
        "outDir": "out",
        "lib": [
            "es2016",
            "DOM"
        ],
        "noImplicitThis": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*":["src/*"]
        }
    },
    "exclude": [
        "node_modules/",
        "out/**/*",
        "gulpfile.js",
    ],
    "include": [
        "src/**/*"
    ]
}